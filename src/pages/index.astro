---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import MasonryGrid from '../components/MasonryGrid';

// Pobierz wszystkie wpisy, posortowane według daty publikacji (od najnowszych)
const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Pobierz wszystkie unikalne tagi
const allTags = [...new Set(posts.flatMap(post => post.data.tags))];
---

<!doctype html>
<html lang="pl">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-gray-100 dark:bg-gray-900">
		<Header />
		<main class="max-w-7xl mx-auto px-4 py-8">
			<section class="mb-12">
				<h1 class="text-4xl font-bold text-center mb-6 text-gray-900 dark:text-white">
					Innowacje dla Polski
				</h1>
				<p class="text-xl text-center max-w-3xl mx-auto text-gray-700 dark:text-gray-300">
					Blog o innowacjach społecznych, politycznych, administracyjnych i innych, 
					które mogą pomóc Polsce w rozwoju i rozwiązaniu najważniejszych problemów.
				</p>
			</section>

			<section class="mb-12">
				<div class="flex justify-between items-center mb-6">
					<h2 class="text-2xl font-bold text-gray-900 dark:text-white">Najnowsze artykuły</h2>
					<a href="/blog" class="text-blue-600 dark:text-blue-400 hover:underline">Zobacz wszystkie</a>
				</div>
				
				<MasonryGrid posts={sortedPosts.slice(0, 9)} client:load />
			</section>

			<section class="mb-12">
				<h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Popularne tematy</h2>
				<div class="flex flex-wrap gap-3">
					{allTags.map(tag => (
						<a 
							href={`/tags/${tag}`} 
							class="px-4 py-2 bg-white dark:bg-gray-800 rounded-full text-gray-700 dark:text-gray-300 shadow hover:bg-blue-100 dark:hover:bg-blue-900 transition"
						>
							{tag}
						</a>
					))}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
