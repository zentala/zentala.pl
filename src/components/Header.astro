---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, NAV_ITEMS } from '../consts';
import ThemeToggle from './ThemeToggle';
---

<header class="bg-white shadow transition-colors duration-200 dark-theme:bg-neutral-800" id="site-header">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <nav class="flex items-center justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="text-xl font-bold text-neutral-900 transition-colors dark-theme:text-neutral-50">
          {SITE_TITLE}
        </a>
      </div>
      
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          {NAV_ITEMS.map((item) => (
            <HeaderLink href={item.href}>{item.name}</HeaderLink>
          ))}
        </div>
      </div>
      
      <div class="flex items-center space-x-4">
        <!-- Theme Toggle -->
        <ThemeToggle client:load />
        
        <div class="social-links hidden md:flex space-x-4">
          <a 
            href="https://github.com/zentala" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-neutral-600 hover:text-primary-color transition-colors dark-theme:text-neutral-400 dark-theme:hover:text-primary-light"
            aria-label="GitHub"
          >
            <svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24" class="fill-current">
              <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z" />
            </svg>
          </a>
          <a 
            href="https://linkedin.com/in/zentala" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-neutral-600 hover:text-primary-color transition-colors dark-theme:text-neutral-400 dark-theme:hover:text-primary-light"
            aria-label="LinkedIn"
          >
            <svg viewBox="0 0 24 24" aria-hidden="true" width="24" height="24" class="fill-current">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
            </svg>
          </a>
        </div>
        
        <!-- Mobile menu button -->
        <button 
          type="button" 
          class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-neutral-600 hover:text-neutral-900 transition-colors dark-theme:text-neutral-400 dark-theme:hover:text-neutral-50"
          aria-label="Menu"
          id="mobile-menu-button"
        >
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </nav>
  </div>
  
  <!-- Mobile menu, hidden by default -->
  <div class="hidden md:hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      {NAV_ITEMS.map((item) => (
        <a 
          href={item.href} 
          class="block px-3 py-2 rounded-md text-base font-medium text-neutral-700 hover:bg-neutral-100 transition-colors dark-theme:text-neutral-300 dark-theme:hover:bg-neutral-700"
        >
          {item.name}
        </a>
      ))}
    </div>
    <div class="pt-4 pb-3 border-t border-neutral-200 dark-theme:border-neutral-700 transition-colors">
      <div class="flex items-center justify-between px-5">
        <div class="flex items-center space-x-4">
          <a 
            href="https://github.com/zentala" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-neutral-600 hover:text-primary-color transition-colors dark-theme:text-neutral-400 dark-theme:hover:text-primary-light"
            aria-label="GitHub"
          >
            <svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24" class="fill-current">
              <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z" />
            </svg>
          </a>
          <a 
            href="https://linkedin.com/in/zentala" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-neutral-600 hover:text-primary-color transition-colors dark-theme:text-neutral-400 dark-theme:hover:text-primary-light"
            aria-label="LinkedIn"
          >
            <svg viewBox="0 0 24 24" aria-hidden="true" width="24" height="24" class="fill-current">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
            </svg>
          </a>
        </div>
        
        <!-- Theme Toggle in Mobile Menu -->
        <div>
          <ThemeToggle client:load />
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  // ObsÅ‚uga menu mobilnego
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    
    button?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });
  });
</script>
